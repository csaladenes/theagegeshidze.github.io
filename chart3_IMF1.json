{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 260,
  "height": 300,
  "title": {
    "text": "IMF Lending Outstanding ",
    "subtitle": "Credit Oustanding to all members, Source: IMF",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/TheaGegeshidze/TheaGegeshidze.github.io/main/data_IMF_creditOutstandingCLEANED.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]))) && isValid(datum[\"Totals\"]) && isFinite(+datum[\"Totals\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#3e56db"},
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; Totals: \" + (format(datum[\"Totals\"], \"\"))"
          },
          "xc": {"scale": "x", "field": "Year"},
          "width": {"value": 5},
          "y": {"scale": "y", "field": "Totals"},
          "y2": {"scale": "y", "value": 0}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "Year"},
      "range": [0, {"signal": "width"}],
      "padding": 5
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Totals"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "labelAngle": 45,
      "ticks": false,
      "labelAlign": "left",
      "labelBaseline": "top",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ]
}
